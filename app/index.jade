doctype html
html(lang='en', ng-app='app')
  head(ng-controller='HeadCtrl')
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    meta(name='description', content='{{ appDescription }}')
    meta(name='author', content='{{ appAuthor }}')
    script.
      document.write('<base href="' + window.location.pathname + '" />');
    title(ng-bind-template='{{ appTitle }} - {{ appVersion }}')
    link(rel='stylesheet', href='/css/app.css')
    script.
      window.brunch = window.brunch || {};
      window.brunch.server = 'localhost';
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src='/js/vendor.js')
    script(src='/js/app.js')
    script(src='/js/app.templates.js')
  body(ng-controller='AppCtrl')
    .wrapper
      .navbar.navbar-default.navbar-static-top
          .container
            .navbar-header
              button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a(href='#!/').navbar-brand {{ appName }}
            div.collapse.navbar-collapse(ng-include="'app/templates/nav.jade'")
      .container.main-content
        div(ng-view)
        .alert.alert-info(role='alert')
          div Angular Brunch Seed app: v
            b <span app-version></span>

    footer.footer
      .container
        p
          small
            a(href='https://github.com/scotch/angular-brunch-seed', target='_blank') angular-brunch-seed
            |  |
            a(href='https://github.com/Anonyfox/node-webkit-hipster-seed', target='_blank')  node-webkit-hipster-seed
